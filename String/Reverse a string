#include<stdio.h>
#include<string.h>
int main()
{
    char a[100];
    int n,i=0;
    printf("enter a string:"); //get an input string 
    scanf("%[^\n]s",a);
    n=strlen(a);
    printf("reversed string is:");
    while(i<n)
    {
        printf("%c",a[n-i]);    // a[n-i] => it represents the reversing process 
        i++;
    }
    return 0;
}
