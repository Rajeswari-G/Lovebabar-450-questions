#include <stdio.h>
int main()
{
    int a[10],b[10],c[10];
    int i,j,k,n,l,m,temp;
    float median;
    printf("Enter the size of  an a  array:");
    scanf("%d",&n);
    printf("Enter the elements in a array:");
    for(i=0;i<n;i++)
    {
        scanf("%d",&a[i]);
        c[i]=a[i];
    }
    printf("Enter the size of  an  b array:");
    scanf("%d",&m);
    printf("Enter the elements in b array:");
    for(j=0;j<m;j++)
    {
        scanf("%d",&b[j]);
        c[i]=b[j];
        i++;
    }
    k=n+m;
    for(i=0;i<k;i++)
    {
        for(j=0;j<k;j++)
        {
            if(c[i]<c[j])
        {
            temp=c[i];
            c[i]=c[j];
            c[j]=temp;
        }
        }
    }
   if(n==m)
   {
    if (k==0)
    {
        median=0;
    }
    else if(k==1)
    {
        median=c[1];
    }
    else if(k%2==0)
    {
        l=k/2;
        median=(c[l]+c[l-1])/(float)2;
    }
    else
    {
        l=k/2;
        median=c[l];
    }
    printf("Median is :%f",median);
   }
   else
   {
       printf("The array size are not equal.");
   }
    return 0;
}
