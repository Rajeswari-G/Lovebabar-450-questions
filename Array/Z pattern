#include<stdio.h>
#include<conio.h>
int main()
{
	int i,n,j,k;
	printf("Enter the number:");
	scanf("%d",&n);
	for(i=1;i<=n;i++)
	{
		if(i==1 || i==n)
		{
			for(k=1;k<=n;k++)
			{
				printf("%d",k);
			}
		}
		else
		{
		    j=n+1-i;
		    for(k=1;k<j;k++)
		    {
		        printf(" ");
		    }
			printf("%d",j);
		}
		printf("\n");
	
	}
	getch();
	return 0;
	
}
